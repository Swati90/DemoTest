<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MedicomPrototype.Views.AddContactsPage"
    Title="Add Contact Details">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="StartAndExpand">
                <TableView Intent="Form" x:Name="AddContactForm">
                    <TableRoot>
                        <TableSection Title="Contact Details">
                            <EntryCell Label="First Name" Placeholder="First Name" />
                            <EntryCell Label="Last Name" Placeholder="Last Name" />
                            <EntryCell Label="Mobile" Placeholder="Mobile Number" Keyboard="Telephone" />
                            <EntryCell Label="E-mail" Placeholder="E-mail ID" Keyboard="Email" />
                            <EntryCell Label="Relationship" Placeholder="Relationship with Patient" />
                        </TableSection>
                    </TableRoot>
                </TableView>
            </StackLayout>
            <StackLayout VerticalOptions="End">
                <Button x:Name="AddContact" Text="Add Emergency Contact" VerticalOptions="End" TextColor="White" BackgroundColor="{StaticResource Primary}" />
            </StackLayout>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
